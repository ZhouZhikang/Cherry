<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cherry.activity.TagSelectActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tag_title_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin"
            android:layout_margin="5dp"
            android:paddingRight="@dimen/common_margin"
            android:paddingTop="16.0dip"
            android:text="选择想关注的标签"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/tag_done_all"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_margin"
            android:layout_margin="5dp"
            android:paddingRight="@dimen/common_margin"
            android:paddingTop="16.0dip"
            android:text="完成"
            android:textColor="@color/black"
            android:textSize="16.0sp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <cherry.widget.TagListView
            xmlns:f="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tagview_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16.0dip"
            android:padding="5dp"
            android:clipToPadding="false"
            f:horizontalSpacing="@dimen/tag_horizontal_spacing"
            f:orientation="horizontal"
            f:verticalSpacing="@dimen/tag_vertical_spacing" />

    </LinearLayout>

</LinearLayout>
